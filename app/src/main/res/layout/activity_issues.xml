<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/issue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/construction"
    android:orientation="vertical"
    tools:context="com.equipshare.concreteapp.Issues">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/IssueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Issue Title"
            android:inputType="textMultiLine"
            android:textColorHint="#504D4D" />

        <Spinner
            android:id="@+id/issue_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="0.05"
            android:ems="10"
            android:entries="@array/categoryiss"
            android:prompt="@string/Issue" />

        <EditText
            android:id="@+id/issue_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Issue Description"
            android:inputType="textMultiLine"
            android:textColorHint="#504D4D" />


        <Button
            android:id="@+id/raise_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#218AFF"
            android:text="Raise Issue"
            android:textColor="#fff" />

    </LinearLayout>
</LinearLayout>
