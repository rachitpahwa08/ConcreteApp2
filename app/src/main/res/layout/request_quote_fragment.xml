<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_quote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/construction"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:id="@+id/request_quote1">

            <android.support.design.widget.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <EditText
                       android:id="@+id/quote_valid_date"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"

                       android:clickable="true"
                       android:hint="Date from which Concrete is needed"
                       android:drawableEnd="@drawable/ic_date_range_black_24dp"
                       android:editable="false" />
               </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Customer Site" />

                <Spinner
                    android:id="@+id/customer_site_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0.05"
                    android:ems="10"
                    android:entries="@array/listofplant" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/quan_qual1">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/quote_quantity1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:layout_marginEnd="12dp"
                        />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality:"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>
                <Spinner
                    android:id="@+id/quote_qualtiy_spinner1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:entries="@array/Quality_Type"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/add_button_d"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_add_circle_outline_24dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/quan_qual2">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/quote_quantity2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quality"
                        android:inputType="number"
                        android:layout_marginEnd="12dp"
                        />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality:"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/quote_qualtiy_spinner2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:entries="@array/Quality_Type"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/delete_button_1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_remove_circle_outline_24dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/quan_qual3">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/quote_quantity3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quality"
                        android:inputType="number"
                        android:layout_marginEnd="12dp"
                        />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality:"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/quote_qualtiy_spinner3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:entries="@array/Quality_Type"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/delete_button_2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_remove_circle_outline_24dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/quan_qual4">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/quote_quantity4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quality"
                        android:inputType="number"
                        android:layout_marginEnd="12dp"
                        />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality:"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/quote_qualtiy_spinner4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:entries="@array/Quality_Type"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/delete_button_3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_remove_circle_outline_24dp"
                    android:layout_marginTop="10dp"
                   />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/quan_qual5">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/quote_quantity5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quality"
                        android:inputType="number"
                        android:layout_marginEnd="12dp"
                        />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality:"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/quote_qualtiy_spinner5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:entries="@array/Quality_Type"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/delete_button_4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_remove_circle_outline_24dp"
                    android:layout_marginTop="10dp"
                   />
            </LinearLayout>

            <Button
                android:id="@+id/submit_quote"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>