<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/construction"
    android:orientation="vertical"
    tools:context="com.equipshare.concreteapp.Calculator">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:focusable="true"
           android:focusableInTouchMode="true">

           <android.support.v7.widget.CardView
               android:id="@+id/calc_header"
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:layout_marginBottom="12dp"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"
               android:layout_marginTop="12dp"
               android:paddingLeft="7dp"
               android:paddingRight="7dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/shapeimg"
                       android:layout_width="75dp"
                       android:layout_height="150dp"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       app:srcCompat="@mipmap/ic_launcher_round" />

                   <TextView
                       android:id="@+id/shapetype"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="30dp"
                       android:layout_weight="1"
                       android:text="TextView"
                       android:textSize="20sp" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/calc_content"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="20dp"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"
               android:layout_marginTop="6dp"
               android:paddingLeft="7dp"
               android:paddingRight="7dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="12dp"
                       android:layout_marginRight="12dp"
                       android:layout_marginTop="12dp"
                       android:id="@+id/t1">

                       <EditText
                           android:id="@+id/field1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:ems="10"
                           android:inputType="numberDecimal" />
                   </android.support.design.widget.TextInputLayout>

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="12dp"
                       android:layout_marginRight="12dp"
                       android:layout_marginTop="12dp"
                       android:id="@+id/t2">

                       <EditText
                           android:id="@+id/field2"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:ems="10"
                           android:inputType="numberDecimal" />
                   </android.support.design.widget.TextInputLayout>

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="12dp"
                       android:layout_marginRight="12dp"
                       android:layout_marginTop="12dp"
                       android:id="@+id/t3">

                       <EditText
                           android:id="@+id/field3"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:ems="10"
                           android:inputType="numberDecimal" />
                   </android.support.design.widget.TextInputLayout>

                   <android.support.design.widget.TextInputLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="12dp"
                       android:layout_marginRight="12dp"
                       android:layout_marginTop="12dp"
                       android:id="@+id/t4">

                       <EditText
                           android:id="@+id/field4"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:ems="10"
                           android:inputType="numberDecimal" />
                   </android.support.design.widget.TextInputLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="12dp"
                       android:layout_marginRight="12dp"
                       android:layout_marginTop="15dp">

                       <TextView
                           android:id="@+id/textView2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="You need" />

                       <EditText
                           android:id="@+id/result"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:clickable="false"
                           android:ems="10"
                           android:focusable="false" />
                   </LinearLayout>

                   <Button
                       android:id="@+id/calculate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="20dp"
                       android:layout_marginLeft="12dp"
                       android:layout_marginRight="12dp"
                       android:layout_marginTop="12dp"
                       android:background="@color/colorPrimary"
                       android:text="Calculate"
                       android:textColor="#fff" />
               </LinearLayout>


           </android.support.v7.widget.CardView>


       </LinearLayout>

   </ScrollView>
</LinearLayout>
